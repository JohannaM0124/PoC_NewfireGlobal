{
  "json": {
    "enabled": true,
    "output": "cypress/reports/cucumber-json/cucumber-report.json",
    "formatter": "node",
    "args": [
      "./node_modules/@deepakvishwakarma/cucumber-json-formatter/lib/main.js"
    ]
  },
  "messages": {
    "enabled": true,
    "output": "cypress/reports/cucumber-json/cucumber-messages.ndjson"
  },
  "html": {
    "enabled": false,
    "output": "cypress/reports"
  },
  "stepDefinitions": [
    "cypress/e2e/step_definitions/*.{js,ts}",
    "cypress\\e2e\\step_definitions\\*.{js,ts}"
  ]
}
